{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@r1x/agent-core": ["./agent-core/src"],
      "@r1x/agent-kit": ["./agent-kit/src"],
      "@r1x/agent-kit-hono": ["./agent-kit-hono/src"],
      "@r1x/agent-kit-tanstack": ["./agent-kit-tanstack/src"],
      "@r1x/agent-kit-identity": ["./agent-kit-identity/src"],
      "@r1x/agent-auth": ["./agent-auth/src"],
      "@r1x/create-agent-kit": ["./create-agent-kit/src"]
    }
  }
}